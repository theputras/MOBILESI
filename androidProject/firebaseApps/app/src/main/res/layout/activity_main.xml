<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:id="@+id/tv_status_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Status: Belum Terkoneksi"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btn_menu_connect"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Koneksi Printer"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btn_menu_print"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cetak Teks Biasa"
        android:layout_marginBottom="16dp"/>
    <Button
        android:id="@+id/btn_menu_data"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="Cek data"/>

</LinearLayout>